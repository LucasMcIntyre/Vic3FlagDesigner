<Window x:Class="Vic3FlagDesigner.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Loading" Height="150" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">

    <Grid>
        <ProgressBar x:Name="ProgressBar" Height="25" Minimum="0" Maximum="100" Value="0" VerticalAlignment="Top" Margin="10"/>
        <TextBlock x:Name="ProgressText" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14"/>
        <Button Content="Cancel" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" Padding="5,2" Click="CancelButton_Click"/>
    </Grid>
</Window>
